{% extends 'base.html.twig' %}

{% block title %}Checkpoint index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Checkpoints</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Curriculum</th>
                    <th>Checkpoint nÂ°</th>
                    <th>Name</th>
                    <th>Duration</th>
                    <th>Global Skills</th>
                    <th>Created at</th>
                    <th>Updated at</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for checkpoint in checkpoints %}
                <tr>
                    <td>{{ checkpoint.curriculum.name }}</td>
                    <td>{{ checkpoint.number }}</td>
                    <td>{{ checkpoint.name }}</td>
                    <td>{{ checkpoint.duration }}</td>
                    <td>{{ checkpoint.globalSkills }}</td>
                    <td>{{ checkpoint.createdAt ? checkpoint.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ checkpoint.updatedAt ? checkpoint.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('admin_show', {'id': checkpoint.id}) }}">show</a>
                        <a href="{{ path('admin_edit', {'id': checkpoint.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    <a href="{{ path('admin_new') }}">Create new</a>
    </div>
{% endblock %}
